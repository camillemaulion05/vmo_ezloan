extends ../layout2

block content
  #content-wrapper.d-flex.flex-column
    #content.landing
      include ../partials/page-topbar
      main
        include ../partials/page-header
        include ../partials/page-flash
        .container-fluid
          .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
              h6.m-0.font-weight-bold.text-primary List of Inquiries
              .dropdown.no-arrow
            .card-body
              .table-responsive
                table#dataTable.table.table-bordered.table-hover(width='100%' cellspacing='0')
                  thead
                    tr
                      th Inquiry No.
                      th Name
                      th Email Address
                      th Messages
                      th Response
                      th Actions
                  tfoot
                    tr
                      th Inquiry No.
                      th Name
                      th Email Address
                      th Messages
                      th Response
                      th Actions
                  tbody
                    for x in inquiries
                      tr
                        td #{x.inquiryNum}
                        td #{x.firstName} #{x.lastName}         
                        td #{x.email}
                        td #{x.message}
                        if (x.response.message)
                          td #{x.response.message}
                        else 
                          td
                        td 
                          a.updateInquiry.btn.btn-datatable.btn-icon.btn-transparent-dark.mr-2(href=('/'+x._id+'/'+x.firstName+'/'+x.lastName) data-toggle='modal' data-target='#')
                            i.fas.fa-edit
                          a.deleteInquiry.btn.btn-datatable.btn-icon.btn-transparent-dark(href=('/'+x._id+'/'+x.firstName+'/'+x.lastName) data-toggle='modal' data-target='#')
                            i.fas.fa-trash
    include ../partials/page-footer