extends ../layout

block content
  .container
    .form-clean.login-form
      form#resetForm(method='post')
        input(type='hidden', name='_csrf', value=_csrf)
        span.fa-stack.fa-4x(style='margin: 0 auto 30px;')
          i.fa.fa-circle.fa-stack-2x.text-primary
          i.fa.fa-key.fa-stack-1x.fa-inverse
        h2 Reset your password
        p.hint-text Please choose a new password to finish signing in.
        .row
          .col-sm-12
            .form-group
              input#password.form-control(type='password' name='password' placeholder='New Password' minlength='8')
              em.help-block.text-danger
        .row
          .col-sm-12
            .form-group
              input#confirmPassword.form-control(type='password' name='confirmPassword' placeholder='Re-enter new password')
              em.help-block.text-danger
        div(style='overflow:auto;')
          div(style='float:right;')
            button.btn.btn-primary(type='submit') Update Password