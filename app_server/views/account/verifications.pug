extends ../layout2

block content
  #content-wrapper.d-flex.flex-column
      #content.landing
        include ../partials/page-topbar
        main
          include ../partials/page-header
          include ../partials/page-flash
          .container-fluid
            .row
              .col-xl-8
                .card.mb-4
                  .card-body.p-5
                    .row.align-items-center.justify-content-between
                      .col
                        h2.text-primary Verification - #{user.profile.firstName} #{user.profile.lastName}
                        p.text-gray-700
                          | Here you can monitor your progress towards verification.
                          br
                          | After all sections below are complete and all documents have been provided,
                          br
                          | the compliance team will begin to review your information, approved your account and set your credit limit.
                        p.text-gray-700
                          | Questions? Check out our verification 
                          span.text-primary FAQ
                          | .
                        - let profileStat = (user.profile && user.profile.firstName && user.profile.middleName && user.profile.lastName && user.profile.gender && user.profile.dateOfBirth && user.profile.maritalStat && user.profile.dependents && user.profile.educAttainment && user.profile.placeOfBirth && user.profile.nationality && user.profile.homePhoneNum && user.profile.mobileNum && user.profile.tin && user.profile.email) ? 'Completed' : 'Incomplete'
                        - let addressStat = (user.profile && user.profile.address && user.profile.address.sameAddress && user.profile.address.present && user.profile.address.present.unitNo && user.profile.address.present.houseNo && user.profile.address.present.street && user.profile.address.present.subdivision && user.profile.address.present.barangay && user.profile.address.present.city && user.profile.address.present.province && user.profile.address.present.zipCode && user.profile.address.permanent && user.profile.address.permanent.unitNo && user.profile.address.permanent.houseNo && user.profile.address.permanent.street && user.profile.address.permanent.subdivision && user.profile.address.permanent.barangay && user.profile.address.permanent.city && user.profile.address.permanent.province && user.profile.address.permanent.zipCode) ? 'Completed' : 'Incomplete'
                        - let workStat = (user.workBusinessInfo && user.workBusinessInfo.companyName && user.workBusinessInfo.department && user.workBusinessInfo.officePhone && user.workBusinessInfo.officeAddress && user.workBusinessInfo.officeAddress.unitNo && user.workBusinessInfo.officeAddress.houseNo && user.workBusinessInfo.officeAddress.street && user.workBusinessInfo.officeAddress.subdivision && user.workBusinessInfo.officeAddress.barangay && user.workBusinessInfo.officeAddress.city && user.workBusinessInfo.officeAddress.province && user.workBusinessInfo.officeAddress.zipCode && user.workBusinessInfo.dateHired && user.workBusinessInfo.employmentType && user.workBusinessInfo.occupationType && user.workBusinessInfo.businessType && user.workBusinessInfo.position && user.workBusinessInfo.monthlyIncome) ? 'Completed' : 'Incomplete'
                        - let accountStat = (user.account) ? (user.account.type =="G-Cash") ? (user.account.name && user.account.number) ? 'Completed' : 'Incomplete' : (user.account.type && user.account.branch && user.account.name && user.account.number) ? 'Completed' : 'Incomplete' : 'Incomplete' 
                        - let workAndAccountStat = (workStat == 'Completed' && accountStat == 'Completed') ? 'Completed' : 'Incomplete'
                        - let documentsStat = (user.documents && user.documents.primaryIdFront && user.documents.primaryIdBack && (user.documents.companyIdFront && user.documents.companyIdBack || user.documents.coe) && (user.documents.payslip1 && user.documents.payslip2 || user.documents.bir) && user.documents.tinProof && user.documents.selfiewithId) ? 'Completed' : 'Incomplete'
                        - let signatureStat = (user.signature)  ? 'Completed' : 'Incomplete'
                        if user.status == "Pending for Review"
                          p.text-primary Your application to Full verfication level is under review.
                          a.btn.btn-primary.p-2.mr-2(href='/verifications/cancel')
                            | Cancel Verification Request
                        else if user.status == "Basic" && profileStat == 'Completed' && addressStat == 'Completed' && workAndAccountStat == 'Completed' && documentsStat == 'Completed' && signatureStat == 'Completed'
                          a.btn.btn-primary.p-2.mr-2(href='/verifications/submit')
                            | Submit Verification Request
                        if profileStat == 'Completed' && addressStat == 'Completed' && workAndAccountStat == 'Completed' && documentsStat == 'Completed' && signatureStat == 'Completed'
                          a.btn.btn-success.p-2.mr-2(href='/download/borrower')
                            | Download Application Form
              .col-xl-4
                .card.mb-4
                  .card-body
                    .chart-pie.pt-4.pb-2
                      .chartjs-size-monitor
                        .chartjs-size-monitor-expand
                          div
                        .chartjs-size-monitor-shrink
                          div
                      .doughnut-inside-text
                        if user.status == "Basic" || user.status == "Pending for Review"
                          h3#userStatus.text-primary Basic
                        else
                          h3#userStatus.text-primary #{user.status}
                        p Verification Level
                      canvas#myVerificationChart.chartjs-render-monitor(width='796' height='306' style='display: block; height: 245px; width: 637px;')
            .row
              .col-xl-4.mb-4
                a.card.lift(href='/personal')
                  .card-body.d-flex.justify-content-center.flex-column
                    .d-flex.align-items-center.justify-content-between
                      .mr-3
                        .mb-2
                          i.fas.fa-user.fa-2x
                        h5 Personal Information
                        .text-muted.small
                          | Status: 
                          span.text-primary #{profileStat}
              .col-xl-4.mb-4
                a.card.lift(href='/address')
                  .card-body.d-flex.justify-content-center.flex-column
                    .d-flex.align-items-center.justify-content-between
                      .mr-3
                        .mb-2
                          i.fas.fa-map-marker-alt.fa-2x
                        h5 Address
                        .text-muted.small
                          | Status: 
                          span.text-primary #{addressStat}
              .col-xl-4.mb-4
                a.card.lift(href='/financial')
                  .card-body.d-flex.justify-content-center.flex-column
                    .d-flex.align-items-center.justify-content-between
                      .mr-3
                        .mb-2
                          i.fas.fa-wallet.fa-2x
                        h5 Financial Questionnaire
                        .text-muted.small
                          | Status: 
                          span.text-primary #{workAndAccountStat}
            .row
              .col-xl-4.mb-4
                a.card.lift(href='/documents')
                  .card-body.d-flex.justify-content-center.flex-column
                    .d-flex.align-items-center.justify-content-between
                      .mr-3
                        .mb-2
                          i.fas.fa-id-card.fa-2x
                        h5 Identity Documentation
                        .text-muted.small
                          | Status: 
                          span.text-primary #{documentsStat}
              .col-xl-4.mb-4
                a.card.lift(href='/declaration')
                  .card-body.d-flex.justify-content-center.flex-column
                    .d-flex.align-items-center.justify-content-between
                      .mr-3
                        .mb-2
                          i.fas.fa-clipboard-check.fa-2x
                        h5 KYC Declaration
                        .text-muted.small
                          | Status: 
                          span.text-primary #{signatureStat}
      include ../partials/page-footer