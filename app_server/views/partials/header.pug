            a.collapse-item(href='/deleted/transactions' class=(title.indexOf("Deleted Transactions") != -1) ? 'active' : undefined) Transactions
            a.collapse-item(href='/deleted/withdrawals' class=(title.indexOf("Deleted Withdrawal Requests") != -1) ? 'active' : undefined) Withdrawals
            a.collapse-item(href='/deleted/employees' class=(title.indexOf("Deleted Employees") != -1) ? 'active' : undefined) Employees
            a.collapse-item(href='/deleted/inquiries' class=(title.indexOf("Deleted Inquiries") != -1) ? 'active' : undefined) Inquiries
    hr.sidebar-divider.d-none.d-md-block
    .text-center.d-none.d-md-inline
      button#sidebarToggle.rounded-circle.border-0