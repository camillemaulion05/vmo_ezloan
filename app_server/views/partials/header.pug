        span  VMO EZ Loan
      button.navbar-toggler.navbar-toggler-right(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
        | Menu
        i.fas.fa-bars.ml-1
      #navbarResponsive.collapse.navbar-collapse
        ul.navbar-nav.text-uppercase.ml-auto
          if title === 'Home'
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#products') Products
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#qualifications') Qualifications
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#requirements') Requirements
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#about') About
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#faqs') FAQs
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#contact') Contact
          else
            li.nav-item(class=(title === 'Login') ? 'active' : undefined)
              a.nav-link(href='/login') Login
            li.nav-item(class=(title === 'Signup') ? 'active' : undefined)
              a.nav-link(href='/signup') Create Account
else
  ul#accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion
    a.sidebar-brand.d-flex.align-items-center.justify-content-center(href='/account')
      .sidebar-brand-icon
        img(src='/img/logo.png' style='height: 40px; width: 40px;')
      .sidebar-brand-text VMO EZ Loan
    hr.sidebar-divider.my-0
    li.nav-item(class=(title.indexOf("Profile") != -1) ? 'active' : undefined)
      a.nav-link(href='/profile')
        i.fas.fa-user-circle
        span Profile
    li.nav-item(class=(title.indexOf("Security") != -1) ? 'active' : undefined)
      a.nav-link(href='/security')
        i.fas.fa-cogs
        span Security
    if user.userId.type == "Borrower"
      li.nav-item(class=(title.indexOf("Verifications") != -1) ? 'active' : undefined)
        a.nav-link(href='/verifications')
          i.fas.fa-check-circle
          span Verifications
      li.nav-item(class=(title.indexOf("Loans") != -1) ? 'active' : undefined)
        a.nav-link(href='/credits')
          i.fas.fa-balance-scale
          span Loans
    if user.userId.type == "Borrower" && user.type == "Member"
      li.nav-item(class=(title.indexOf("Contributions") != -1) ? 'active' : undefined)
        a.nav-link(href='/contributions')
          i.fas.fa-wallet
          span Contributions
