      li.nav-item(class=(title.indexOf("Manage Borrowers") != -1) ? 'active' : undefined)
        a.nav-link(href='/borrowers')
          i.fas.fa-user-friends
          span Borrowers
    if user.userId.type == "Admin" || (user.userId.type == "Employee" && user.type != "HRD Authorized Officer")
      li.nav-item(class=(title.indexOf("Manage Loans") != -1) ? 'active' : undefined)
        a.nav-link(href='/loans')
          i.fas.fa-balance-scale
          span Loans
    if user.userId.type == "Admin" || (user.userId.type == "Employee" && user.type == "Loan Processor")
      li.nav-item(class=(title.indexOf("Manage Transactions") != -1) ? 'active' : undefined)
        a.nav-link(href='/transactions')
          i.fas.fa-wallet
          span Transactions
    if user.userId.type == "Admin" || (user.userId.type == "Employee" && user.type != "HRD Authorized Officer")
      li.nav-item(class=(title.indexOf("Manage Withdrawal Requests") != -1) ? 'active' : undefined)
        a.nav-link(href='/withdrawals')
          i.fas.fa-cash-register
          span Withdrawals
    if user.userId.type == "Admin"
      li.nav-item(class=(title.indexOf("Manage Employees") != -1) ? 'active' : undefined)
        a.nav-link(href='/employees')
          i.fas.fa-user-friends
          span Employees
      li.nav-item(class=(title.indexOf("Manage Inquiries") != -1) ? 'active' : undefined)
        a.nav-link(href='/inquiries')
          i.fas.fa-comments
          span Inquiries
    if user.userId.type == "Admin" || user.userId.type == "Employee" || user.userId.type == "Borrower"
      li.nav-item(class=(title.indexOf("Activity Logs") != -1) ? 'active' : undefined)
        a.nav-link(href='/activities')
          i.fas.fa-history
          span Activity Logs
    if user.userId.type == "Admin"
      li.nav-item(class=(title.indexOf("Manage Deleted") != -1) ? 'active' : undefined)
